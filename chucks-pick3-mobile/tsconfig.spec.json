/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "paths": {
    "@app/*": ["src/app/*"],
    "@env/*": ["src/environments/*"],
    "@test/*": ["test/*"],
    "@capacitor/*": ["__mocks__/@capacitor/*"]
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
